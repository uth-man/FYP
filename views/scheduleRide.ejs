  <body>
    <div class="header">
      <span id="schedule"><a href="/driverhome">Home</a></span>
      <span id="schedule"
        ><a href="/schedule/myschedule/<%=data.email%>">My Schedules</a></span
      >
      <span class="dropdown"
        ><a href="#"><%= data.name%></a>
        <div class="dropdown-content">
          <ul>
            <li><a href="#">Profile</a></li>
            <li><a href="#">Carpool</a></li>
            <li><a href="#">Notifications</a></li>
            <li><a href="/passengerlogin/logout">LogOut</a></li>
          </ul>
        </div>
      </span>
    </div>
    <!-- -->
    <div class="row mx-0">
      <div class="col-12 mt-5">
        <div class="container w-50">
          <h1 class="text-center">Schedule Ride</h1>
          <br />
          <form action="/schedule/saveSchedule" method="POST">
            <div class="form-group">
              <div class="form-group">
                <label for=""></label>
              </div>
            </div>
            <div class="form-group">
              <input
                type="text"
                name="origin"
                placeholder="Enter your pick-up address"
                class="form-control"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <input
                type="text"
                name="destination"
                placeholder="Enter your drop-off address"
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="pickDate">pick date : </label>
            </div>
            <div class="form-group">
              <input
                type="date"
                class="form-control"
                name="pickDate"
                id=""
                required
              />
            </div>
            <div class="form-group">
              <label for="pickTime">pick time :</label>
            </div>
            <div class="form-group">
              <input
                type="time"
                class="form-control"
                name="pickTime"
                id=""
                required
              />
            </div>
            <div class="form-group">
              <label for="">Number of Traveler(s)</label>
            </div>
            <div class="form-group">
              <input
                type="number"
                name="numberOfPassengers"
                class="form-control"
                max="4"
                min="0"
                required
              />
            </div>
            <br />
            <div class="form-group">
              <button
                type="submit"
                class="btn btn-info float-right form-control text-light"
                style="background-color: #105b63 !important;"
              >
                Set Schedule
              </button>
            </div>
          </form>
        </div>
      </div>
      <!-- <div class="col-5 mt-5" style="border-left: 2px solid black;">
        <div class="container">
          <h1 class="text-center">Similar Schedules</h1>
        </div>
      </div> -->
    </div>
    <!--  -->
  </body>
</html>
